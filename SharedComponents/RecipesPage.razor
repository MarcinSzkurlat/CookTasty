@using SharedClassLibrary.Persistence
@inject CookTastyDbContext DbContext

<h3>TestPage</h3>

<button @onclick="Run">Show</button>
<button @onclick="Clear">Clear</button>

@if (Recipes.Count == 0)
{
    <p><em>Loading...</em></p>
}
else
{
    <table class="table">
        <thead>
        <tr>
            <th>Title</th>
            <th>Description</th>
            <th>Author</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var recipe in Recipes)
        {
            <tr>
                <td>@recipe.Title</td>
                <td>@recipe.Description</td>
                <td>@recipe.CreatedBy.UserName</td>
            </tr>
        }
        </tbody>
    </table>
}